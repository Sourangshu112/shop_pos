{
  "name": "my-pos-app",
  "productName": "SyntaxLab POS",
  "description": "POS SOFTWARE",
  "author": {"name" :"Sourangshu Ghosh"},
  "private": true,
  "version": "1.0.0",
  "main": "electron/main.cjs",
  "scripts": {
    "vite:dev": "vite",
    "electron:dev": "cross-env ELECTRON_START_URL=http://localhost:3000 electron .",
    "dev": "concurrently -k \"npm run vite:dev\" \"wait-on tcp:3000 && npm run electron:dev\"",
    "vite:build": "vite build",
    "pack:app": "electron-builder --dir",
    "build:app": "electron-builder",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "build" : {
    "appId": "com.syntaxlab.pos",
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "backend-dist",
        "to": "backend-dist",
        "filter": ["**/*"]
      }
    ]
  },
  "dependencies": {
    "@react-pdf/renderer": "^4.3.2",
    "@tailwindcss/vite": "^4.1.18",
    "date-fns": "^4.1.0",
    "file-saver": "^2.0.5",
    "jspdf": "^4.2.0",
    "lucide-react": "^0.574.0",
    "qrcode": "^1.5.4",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hot-toast": "^2.6.0",
    "recharts": "^3.7.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.24",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.4.1",
    "electron-builder": "^26.8.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "vite": "^7.3.1",
    "wait-on": "^9.0.4"
  }
}
